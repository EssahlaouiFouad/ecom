{
    "version": 2,
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.7.1"
        },
        "public/**/*.php": {
            "runtime": "vercel-php@0.7.1"
        }
    },
    "routes": [
        { "src": "/assets/(.*)", "dest": "/public/assets/$1" },
        { "src": "/api/(.*)", "dest": "/api/$1" },
        { "src": "/style.css", "dest": "/public/style.css" },
        { "src": "/(.*)\.php", "dest": "/public/$1.php" },
        { "src": "/", "dest": "/public/index.php" },
        { "src": "/(.+)", "dest": "/public/index.php?page=$1" }
    ],
    "env": {
        "APP_ENV": "production"
    }
}