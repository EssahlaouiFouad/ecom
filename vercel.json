{
    "version": 2,
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.7.1"
        },
        "public/**/*.php": {
            "runtime": "vercel-php@0.7.1"
        }
    },
    "routes": [
        { "src": "/assets/(?<path>.*)", "dest": "/public/assets/$path" },
        { "src": "/api/(?<path>.*)", "dest": "/api/$path" },
        { "src": "/style\.css", "dest": "/public/style.css" },
        { "src": "/(?<file>[^\/]+)\.php", "dest": "/public/$file.php" },
        { "src": "/", "dest": "/public/index.php" },
        { "src": "/(?<page>[^\/]+)", "dest": "/public/index.php?page=$page" }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false"
    }
}